        </Button>
        <Button x:Name="BtnMainDelete" Content="Удалить" HorizontalAlignment="Left" Margin="982,146,0,0" VerticalAlignment="Top" Width="132" Height="35" FontSize="18">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="BtnMainUpdate" Content="Обновить" HorizontalAlignment="Left" Margin="982,217,0,0" VerticalAlignment="Top" Width="132" Height="35" FontSize="18">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
