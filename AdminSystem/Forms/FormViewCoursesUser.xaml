<Window x:Class="AdminSystem.Forms.FormViewCoursesUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminSystem.Forms"
        mc:Ignorable="d"
        Title="Курсы пользователя" Height="481.96" Width="865.199" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="DataGridUserCourses" IsReadOnly="True" HorizontalAlignment="Left" Height="339" Margin="10,103,0,0" VerticalAlignment="Top" Width="829" FontSize="16" MouseDoubleClick="DataGridUserCourses_MouseDoubleClick"/>
        <Button HorizontalAlignment="Right" Margin="0,0,20,356" VerticalAlignment="Bottom" Width="132" Height="30" FontSize="18" Click="Button_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Закрыть" Height="26"/>
            </StackPanel>
        </Button>
        <ComboBox x:Name="CbxUserCategory" HorizontalAlignment="Right" Margin="0,57,417,0" VerticalAlignment="Top" Width="288" FontSize="18">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <ComboBoxItem IsSelected="True" Content="Курсы"/>
            <ComboBoxItem Content="Конкурсы"/>
            <ComboBoxItem Content="Опыт"/>
            <ComboBoxItem Content="Материалы"/>
            <ComboBoxItem Content="Публикации"/>
            <ComboBoxItem Content="Технологии"/>
            <ComboBoxItem Content="Работа с родителями"/>
            <ComboBoxItem Content="Другое"/>
        </ComboBox>
        <Label Content="Пользователь" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="BtnShowOtherUsersCourses" HorizontalAlignment="Right" Margin="0,0,268,356" VerticalAlignment="Bottom" Width="132" Height="79" FontSize="18">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Показать" Height="26"/>
            </StackPanel>
        </Button>
        <Label Name="LblUsername" Content="Имя пользователя" HorizontalAlignment="Left" Margin="147,17,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>

    </Grid>
</Window>
