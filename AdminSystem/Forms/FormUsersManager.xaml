        </TextBox>
        <TextBox x:Name="TxbxMiddlename" IsEnabled="False" HorizontalAlignment="Right" Height="25" Margin="0,149,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" TextAlignment="Center" FontSize="14" FontWeight="Bold">
