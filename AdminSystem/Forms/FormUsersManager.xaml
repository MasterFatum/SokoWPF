                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="../Source/Edit User_32px.png" Height="29"/>
                <TextBlock Name="TxBlChangeUser" Text=" Изменить" Height="26"/>
