            </TextBox.Effect>
        </TextBox>
        <TextBox x:Name="TxbxPosition" IsEnabled="False" HorizontalAlignment="Right" Height="25" Margin="0,192,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" TextAlignment="Center" FontSize="14" FontWeight="Bold">
